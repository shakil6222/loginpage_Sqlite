<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Regester_Screen">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/registen_background_shap"
        android:layout_gravity="center"
        android:layout_height="400dp">
    <TextView
        android:layout_width="wrap_content"
        android:text="Signup Page"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/registerName_EditText"
        android:hint="User Name"
        android:padding="20dp"
        android:inputType="text"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/registerEmail_EditText"
        android:hint="User Email"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/registerPassworsd_EditText"
        android:hint="Password"
        android:textSize="10dp"
        android:inputType="numberPassword"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/registerButton_Button"
        android:text="Login"
        android:layout_height="wrap_content"
        />
    </LinearLayout>

</LinearLayout>